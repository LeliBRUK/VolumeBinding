; Define the path to SoundVolumeView.exe
SoundVolumeViewPath := "C:\(path here)\SoundVolumeView.exe"

;return keys
~+b::return
~+d::return
~b::return
~d::return

; add the apps
; Hotkeys for controlling Spotify's volume
Volume_Up::ChangeAppVolume("Spotify.exe", 10)    ; Increase volume by 5%
Volume_Down::ChangeAppVolume("Spotify.exe", -10) ; Decrease volume by 5%
Volume_Mute::ChangeAppVolume("Spotify.exe", -100)    ; Increase volume by 5%
; Add Brave
B & Volume_Up::ChangeAppVolume("Brave.exe", 10)    ; Increase volume by 5%
B & Volume_Down::ChangeAppVolume("Brave.exe", -10) ; Decrease volume by 5%
B & Volume_Mute::ChangeAppVolume("Brave.exe", -100)    ; Increase volume by 5%
; Add Discord
D & Volume_Up::ChangeAppVolume("Discord.exe", 10)    ; Increase volume by 5%
D & Volume_Down::ChangeAppVolume("Discord.exe", -10) ; Decrease volume by 5%
D & Volume_Mute::ChangeAppVolume("Discord.exe", -100)    ; Increase volume by 5%

; Function to change the volume of a specific application
ChangeAppVolume(appName, amount) {
    global SoundVolumeViewPath
    ; Construct the command with parameters
    command := """" SoundVolumeViewPath """ /ChangeVolume """ appName """ " amount
    ; Execute the command
    RunWait, % command, , Hide
}
